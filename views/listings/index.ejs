<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
  }

  /* ✅ Wishlist button styles */
  .listing-card {
    position: relative;
  }

  .wishlist-btn {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    background: white;
    border: none;
    border-radius: 50%;
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
  }

  .wishlist-btn i {
    color: #555;
    font-size: 1.2rem;
  }

  .wishlist-btn.active i {
    color: red;
  }

  .wishlist-btn:hover {
    transform: scale(1.1);
  }
</style>

<!-- FILTER ICONS -->
<div id="filters">

  <a href="/listings/filter/trending" class="filter text-decoration-none text-dark">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </a>

  <a href="/listings/category/mountains" class="filter text-decoration-none text-dark">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </a>

  <a href="/listings/category/farms" class="filter text-decoration-none text-dark">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </a>

  <a href="/listings/category/arctic" class="filter text-decoration-none text-dark">
    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Arctic</p>
  </a>

  <a href="/listings/category/deserts" class="filter text-decoration-none text-dark">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Deserts</p>
  </a>

  <!-- TAX TOGGLE -->
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
      <label class="form-check-label">
        Display total after taxes
      </label>
    </div>
  </div>

</div>

<!-- LISTINGS -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

  <% for (let listing of allListings) { %>
    <div class="col">
      <div class="card listing-card">

        <!-- ✅ Wishlist Button -->
        <% if (currUser) { %>
          <form
            action="/wishlist/<%= listing._id %>"
            method="POST"
            onclick="event.stopPropagation();"
          >
            <button
              type="submit"
              class="wishlist-btn <%= currUser.wishlist?.includes(listing._id) ? 'active' : '' %>"
            >
              <i class="fa-solid fa-heart"></i>
            </button>
          </form>
        <% } %>

        <!-- Listing Link -->
        <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            style="height:20rem"
          >

          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br>
              ₹<%= listing.price.toLocaleString("en-IN") %>/night
              <span class="tax-info"> +18% GST</span>
            </p>
          </div>
        </a>

      </div>
    </div>
  <% } %>

</div>

<script>
  const taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    const taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = info.style.display === "inline" ? "none" : "inline";
    }
  });
</script>
